FROM python:3.12-slim

# Install uv from Astral image
COPY --from=ghcr.io/astral-sh/uv:0.6.10 /uv /uvx /bin/

# Set working directory
WORKDIR /app

# Copy only dependency metadata files first (cache optimization)
COPY pyproject.toml uv.lock ./

# Install dependencies into system Python
RUN uv sync --frozen --no-cache

# Now copy the rest of the app (after deps are installed)
COPY . .

# Expose port for FastAPI
EXPOSE 8000

# Run the application (adjust if app.py is elsewhere)
CMD ["uv", "run", "uvicorn", "gemini_backend.app:app", "--host", "0.0.0.0", "--port", "8000", "--app-dir", "/app"]

